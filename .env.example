# LabelHub Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=labelhub
POSTGRES_PASSWORD=labelhub_secret
POSTGRES_DB=labelhub
POSTGRES_PORT=5432

# For local development with SQLite (backend only):
# DATABASE_URL=sqlite+aiosqlite:///./labelhub.db

# =============================================================================
# Backend Configuration
# =============================================================================
# Port for backend API
BACKEND_PORT=8000

# Debug mode (set to false in production)
DEBUG=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost

# =============================================================================
# Media Storage Configuration
# =============================================================================
# Host path to mount as image source (server path scanning)
# This is the directory on your HOST machine containing images
HOST_MEDIA_ROOT=./sample_images

# Path inside container where images are mounted (don't change unless you know what you're doing)
MEDIA_ROOT=/data/images

# Path for generated thumbnails
THUMB_ROOT=/app/thumbs

# =============================================================================
# Frontend Configuration
# =============================================================================
# Port for frontend (production mode via nginx)
FRONTEND_PORT=80

# For development, frontend runs on port 5173 via vite
# Run: cd frontend && npm run dev

# =============================================================================
# JWT Authentication (M4)
# =============================================================================
# Secret key for JWT signing (CHANGE THIS IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# JWT algorithm
ALGORITHM=HS256

# Token expiration times (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days
